{
  "name": "forchan",
  "version": "0.0.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:webpack",
    "build:webpack": "NODE_ENV=production babel-node bin/build",
    "preview": "npm run build && npm run prod",
    "prod": "NODE_ENV=production npm start",
    "start": "node bin/start",
    "lint": "eslint src webpack bin",
    "deploy": "pm2 deploy ecosystem.json production"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-decorators-legacy",
      [
        "module-resolver",
        {
          "root": [
            "src"
          ]
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "zavatta",
      "zavatta-react"
    ],
    "globals": {
      "Promise": false
    }
  },
  "dependencies": {
    "axios": "^0.15.3",
    "classnames": "^2.2.5",
    "cli-spinners": "^1.0.0",
    "compression": "^1.6.2",
    "es6-promisify": "^5.0.0",
    "express": "^4.14.0",
    "lodash": "^4.17.13",
    "memory-cache": "^0.1.6",
    "morgan": "^1.7.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redial": "^0.5.0",
    "redux": "^3.6.0",
    "redux-actions": "^1.1.0",
    "redux-thunk": "^2.1.0",
    "styled-components": "3"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-module-resolver": "^2.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.11.1",
    "eslint-config-zavatta": "^6.0.3",
    "eslint-config-zavatta-react": "^2.3.1",
    "eslint-plugin-react": "^6.8.0",
    "ignore-styles": "^5.0.1",
    "json-loader": "^0.5.4",
    "progress-bar-webpack-plugin": "^1.9.0",
    "webpack": "^2.1.0-beta.4",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-stats-plugin": "^0.1.4"
  },
  "private": true
}
